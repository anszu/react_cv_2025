{
    "compilerOptions": {
        "target": "ES2020",
        "module": "CommonJS",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "strict": true,
        "outDir": "./dist",
        "rootDir": "./",
        "skipLibCheck": true
    },
    "include": [
        "*.ts",
        "prompts/**/*.ts",
        "utils/**/*.ts",
        "middleware/**/*.ts",
        "mocks/setupTests.ts"
    ],
    "exclude": ["node_modules", "**/*.test.ts"]
}
